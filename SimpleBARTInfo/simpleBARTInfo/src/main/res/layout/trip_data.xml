<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:layout_marginTop="10px"
android:layout_marginBottom="5px"
xmlns:android="http://schemas.android.com/apk/res/android"
>

<TextView
android:id="@+id/trip_details"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_gravity="left"
android:textAppearance="@style/NameText"
>
</TextView>

        <!-- source and destinaion -->
<TextView
android:id="@+id/trip_origin_name"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_gravity="left"
android:textAppearance="@style/NameText"
>
</TextView>
<TextView
android:id="@+id/trip_destination_name"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_gravity="left"
android:textAppearance="@style/NameText"
>
</TextView>

<!-- trip times -->
<TextView
android:id="@+id/trip_estimated_leave_time"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_gravity="left"
android:textAppearance="@style/TimeText"
>
</TextView>
<TextView
android:id="@+id/trip_estimate_arrival_time"
android:layout_width="fill_parent"
android:layout_height="wrap_content"
android:layout_gravity="left"
android:textAppearance="@style/TimeText"
>
</TextView>

<!-- fares amounts -->
<TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:textAppearance="@style/TimeText" 
        android:id="@+id/trip_fare_value"></TextView>

    <TextView
        android:id="@+id/trip_clipper_fare_value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:textAppearance="@style/TimeText" />

    <TextView
        android:id="@+id/trip_senior_disabled_clipper_value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:textAppearance="@style/TimeText" />

    <!--
    <TextView
        android:id="@+id/trip_youth_clipper_value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:textAppearance="@style/TimeText" />
        --> 

<ListView
        android:id="@+id/trip_planner_leg_rows"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></ListView>
  
</LinearLayout>
