    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/xchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" >
        </TextView>
        <TextView
            android:id="@+id/ychange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" >
        </TextView>
                <TextView
            android:id="@+id/zchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" >
        </TextView>

        <WebView
            android:id="@+id/randomSizerWebView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</ScrollView>